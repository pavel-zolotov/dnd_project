<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.qweco.dndproject.AppearanceFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/characterImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_person_grey_200_36dp" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/characterImg"
            android:layout_marginLeft="20dp"
            android:text="@string/name"/>

        <TextView
            android:id="@+id/txtRaceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtName"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:text="@string/race_label"/>

        <TextView
            android:id="@+id/txtRaceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/txtRaceLabel"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtInitiativeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Initiative"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtInitiativeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtInitiativeLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="2"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtHpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="HP"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtHpValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHpLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="11"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtSpeedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Speed"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtSpeedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSpeedLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="14"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtHitDiceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Hit Dice"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtHitDiceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHitDiceLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="26"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtArmourClassLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Armour class"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtArmourClassValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtArmourClassLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="9"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtProficiencyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Proficiency"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtProficiencyValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtProficiencyLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="2"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>