<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="?attr/cardBackground">


  	<RelativeLayout
  	    android:id="@+id/cardContent"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/characterImg"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_person_grey_200_36dp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/characterImg"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/txtRaceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtName"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtName"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textSize="14sp"
            android:text="@string/race_label"/>

        <TextView
            android:id="@+id/txtRaceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/txtRaceLabel"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtName"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textSize="14sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
