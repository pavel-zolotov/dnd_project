<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    app:cardCornerRadius="4dp">


  	<RelativeLayout
  	    android:id="@+id/cardContent"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/characterImg"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_person_grey_200_36dp"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgShare"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/characterImg"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/txtRaceAndClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtName"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRaceAndClass"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/material_gray_700"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtSavethrow1Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtSavethrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/txtSavethrow1Label"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/material_gray_700"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtSavethrow2Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtSavethrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/txtSavethrow2Label"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/material_gray_700"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPerceptionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtPerception"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/txtPerceptionLabel"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <ImageButton
            android:id="@+id/imgShare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_share_white_24dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
